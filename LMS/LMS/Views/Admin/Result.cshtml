
@{
    ViewBag.Title = "Result";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<div id="page-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Result</h1>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">

                    </div>
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-lg-6">


                                <form method="post">

                                    <div class="form-group">
                                        <label>Departments</label>
                                        <select id="DepartmentComboBox" class="form-control">
                                            <option value="-1">Select a department</option>
                                            @foreach (var r in ViewBag.departments)
                                            {
                                                <option value="@r.DepartmentID">@r.DepartmentName</option>
                                                

                                            }


                                        </select>
                                    </div>

                                    <div class="form-group">
                                        <label>Students</label>
                                        <select id="StudentComboBox" class="form-control">
                                            <option value="-1">Select a Students</option>
                                        </select>

                                    </div>

                                    <div class="form-group">
                                        <label>Student</label>
                                        <select class="form-control">
                                            <option></option>
                                            <option>1</option>
                                            <option>2</option>
                                            <option>3</option>
                                            <option>4</option>

                                        </select>
                                    </div>




                                    <div class="form-group">
                                        <label>Grade</label>
                                        <input class="form-control" placeholder="Enter Grade">
                                    </div>


                                    <div class="form-group">
                                        <label>Credit Hours</label>
                                        <input class="form-control" placeholder="Enter Credit Hours">
                                    </div>




                                    <div class="form-group">
                                        <label>Date</label>
                                        <input type=date class="form-control" placeholder="Enter Date">
                                    </div>

                                    <div class="form-group">
                                        <label>Course</label>
                                        <select class="form-control">
                                            <option></option>
                                            <option>1</option>
                                            <option>2</option>
                                            <option>3</option>
                                            <option>4</option>

                                        </select>
                                    </div>


                                    <button type="submit" class="btn btn-primary">Calculate Result</button>

                                </form>
                            </div>
                            <!-- /.col-lg-6 (nested) -->
                            <!-- /.col-lg-6 (nested) -->
                        </div>
                        <!-- /.row (nested) -->
                    </div>
                    <!-- /.panel-body -->
                </div>
                <!-- /.panel -->
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</div>
<!-- /#page-wrapper -->

<script src="~/Content/js/jquery-1.7.1.min.js" type="text/javascript"></script>
<script type="text/javascript">
    $(document).ready(function () {
        $('#DepartmentComboBox').on('change', function () {
            var DepartmentsID = $('#DepartmentComboBox option:selected').val();
            $.ajax({
                type: 'GET',
                data: { DepartmentsID: DepartmentsID },
                url:'@Url.Action("StudentsFunction", "Admin")',
                success: function (result) {
                    var stud = JSON.stringify(result);
                    var w = '<option value="-1">Select a Student</option>';
                    for (var i = 0; i < stud.length; i++) {
                        w += '< option value = "'+stud[i].Id+'">'+ stud[i].name+'</option >';

                    }
                    $('#StudentComboBox').html(w);
                }
            });       
        });
    });
</script>
