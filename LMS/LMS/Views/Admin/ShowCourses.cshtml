@model IEnumerable<LMS.Models.Course>

@{
    ViewBag.Title = "ShowCourses";
    Layout = "~/Views/Shared/_Admin.cshtml";
}


<div id="page-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">View Courses</h1>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">

                        <p>
                            <a class="btn btn-primary" href="@Url.Action("ReportCourses")">Download Report</a>
                        </p>

                       
                        <table class="table">
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.CourseName)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.DepartmentID)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.CreditHours)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Semester)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Session.Session1)
                                </th>

                                <th></th>
                                <th></th>
                            </tr>

                            @foreach (var item in Model)
                            {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CourseName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DepartmentID)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CreditHours)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Semester)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Session.Session1)
                                </td>


                                <td>@Html.ActionLink("Edit", "EditCourse", new { id = item.CourseID }) </td>
                                <td>@Html.ActionLink("Delete", "DeleteCourse", new { id = item.CourseID }) </td>
                            </tr>
                            }

                        </table>
