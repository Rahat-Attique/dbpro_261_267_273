<!DOCTYPE html>
<html>
<head>
    <title>@Page.Title</title>
    @RenderSection("head", required: false)

    <meta name="viewport" content="width=device-width, initial-scale=1">


    <style>
        .dropbtn {
            background-color: black;
            color: white;
            padding: 16px;
            margin-left: 620px;
            margin-top: 20px;
            font-size: 16px;
            border: none;
        }

        .dropdown {
            position: relative;
            display: inline-block;
        }

        .dropdown-content {
            display: none;
            position: absolute;
            background-color: #f1f1f1;
            min-width: 160px;
            margin-left: 620px;
            box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
            z-index: 1;
        }

            .dropdown-content a {
                color: black;
                padding: 12px 16px;
                text-decoration: none;
                display: block;
            }

                .dropdown-content a:hover {
                    background-color: white;
                }

        .dropdown:hover .dropdown-content {
            display: block;
        }

        .dropdown:hover .dropbtn {
            background-color: black;
        }

        .button {
            background-color: black;
            border: none;
            color: white;
            padding: 15px 32px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 16px;
            cursor: pointer;
        }

        .container {
            position: relative;
            font-family: Arial;
        }

        .text-block {
            position: absolute;
            background-color: white;
            color: white;
            padding-left: 30px;
            padding-right: 20px;
            margin-top: 100px;
        }

        .top-right {
            position: absolute;
            bottom: -100px;
            right: 16px;
            padding-left: 50px;
            color: white;
            margin-right: 10px;
            padding-right: 50px;
            background-color: #484848;
        }
    </style>
</head>
<body>
    <div>
        @RenderBody()
    </div>
</body>
</html>
